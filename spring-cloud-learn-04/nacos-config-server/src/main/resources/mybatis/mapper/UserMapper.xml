<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jamal.nacosconfigserver.dao.UserMapper">

    <resultMap id="baseResultMap" type="com.jamal.nacosconfigserver.domain.User">
    <id column="id" property="id" jdbcType="INTEGER"/>
    <result column="name" property="name" jdbcType="VARCHAR"/>
    <result column="age" property="age" jdbcType="INTEGER"/>
    <result column="email" property="email" jdbcType="VARCHAR"/>
</resultMap>

    <insert id="insertUser" parameterType="com.jamal.nacosconfigserver.domain.User">
        insert into user (name,age,email) values (#{name} ,#{age},#{email})
    </insert>

    <update id="updateUser" parameterType="com.jamal.nacosconfigserver.domain.User">
        update user set name=#{name},age=#{age},email=#{email} where  id = #{id}
    </update>

    <select id="findAll" resultMap="baseResultMap">
        select  * from user limit 1,5
    </select>
</mapper>